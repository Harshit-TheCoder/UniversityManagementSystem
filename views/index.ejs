<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>University Database Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to right, #000428, #004e92);
            color: white;
            font-family: 'Arial', sans-serif;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.3);
            text-align: center;
        }
        .university-container {
            margin-top: 15%;
            animation: fadeIn 1.5s ease-in-out;
        }
        .university-name {
            font-size: 3rem;
            font-weight: bold;
            margin-top: 10px;
        }
        .university-logo {
            width: 150px;  /* Adjust logo size */
            height: auto;
            margin-bottom: 20px;
           /* border: 2px solid red; /* Debugging border */
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        @keyframes fadeOut {
            from { opacity: 1; }
            to { opacity: 0; }
        }
        .login-section {
            display: none;
            margin-top: 10%;
        }
        .login-option {
            background: rgba(255, 255, 255, 0.1);
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
            margin: 10px auto;
            width: 50%;
            cursor: pointer;
            transition: background 0.3s;
        }
        .login-option:hover {
            background: rgba(255, 255, 255, 0.2);
        }
        .login-option a {
            text-decoration: none;
            color: white;
            font-size: 20px;
        }
    </style>
</head>
<body>

    <div class="container">
        <!-- University Name and Logo Section -->
        <div id="university-container" class="university-container">
            <!-- Updated Logo Path -->
            <img src="media/SRM_logo.png" alt="University Logo" id="university-logo" class="university-logo"> 
            
            <div id="university-name" class="university-name">SRM Institute of Science and Technology</div>
        </div>

        <!-- Login Section (appears after animation) -->
        <div id="login-section" class="login-section">
            <div class="login-option"> <a href="/student_login">Student Login</a></div>
            <div class="login-option"> <a href="/faculty_login">Faculty Login</a></div>
            <div class="login-option"> <a href="/admin_login">Admin Login</a></div>
        </div>
    </div>

    <script>
        // After 2 seconds, the university name and logo fade out
        setTimeout(() => {
            document.getElementById('university-container').style.animation = 'fadeOut 1s forwards';
            setTimeout(() => {
                document.getElementById('university-container').style.display = 'none';
                document.getElementById('login-section').style.display = 'block';
            }, 1000);
        }, 2000);
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
