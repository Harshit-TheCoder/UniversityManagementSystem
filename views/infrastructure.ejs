    <script>
        const drawChart = (id, label, ratings) => {
          new Chart(document.getElementById(id), {
            type: 'bar',
            data: {
              labels: ['Student', 'Faculty'],
              datasets: [{
                label: label,
                data: ratings,
                backgroundColor: ['#38bdf8', '#facc15']
              }]
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              scales: {
                y: {
                  beginAtZero: true,
                  max: 5,
                  ticks: {
                    color: '#fff'
                  }
                },
                x: {
                  ticks: {
                    color: '#fff'
                  }
                }
              },
              plugins: {
                legend: {
                  labels: {
                    color: '#fff'
                  }
                }
              }
            }
          });
        };

        window.addEventListener('DOMContentLoaded', () => {
          drawChart('parkChart', 'Park Rating', [4.2, 4.0]);
          drawChart('hospitalChart', 'Hospital Rating', [3.8, 4.3]);
          drawChart('academicChart', 'Academic Block Rating', [4.5, 4.4]);
          drawChart('gardenChart', 'Garden Rating', [4.1, 4.2]);
          drawChart('roadChart', 'Road Condition Rating', [3.2, 3.8]);
          drawChart('sportsChart', 'Playground & Indoor Rating', [4.6, 4.1]);
        });
      </script>
      
