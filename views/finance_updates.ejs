              <td class="px-4 py-3"><%= data.tax_deductions %> Lakhs</td>
              <td class="px-4 py-3 font-bold"><%= data.final_amount %> Lakhs</td>
              <td class="px-4 py-3 text-green-300"><%= data.remarks %></td>
