<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Faculty Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            background: linear-gradient(135deg, #1E2A78, #0F172A);
            color: white;
            font-family: 'Poppins', sans-serif;
            margin: 0;
        }
        .dashboard-container {
            padding: 30px;
        }
        .card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            color: white;
            border: none;
        }
        .card-icon {
            font-size: 40px;
        }
        .table-container {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
              <a class="navbar-brand" href="#">Navbar</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                  <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
                  <li class="nav-item"><a class="nav-link" href="/faculty_details">Dashboard</a></li>
                  <li class="nav-item"><a class="nav-link" href="/faculty_details/finance_updates">Finance</a></li>
                  <li class="nav-item"><a class="nav-link" href="/faculty_details/courses_handled">Courses</a></li>
                  <li class="nav-item"><a class="nav-link" href="/faculty_details/faculty_achievements">Achievements</a></li>
                </ul>
              </div>
            </div>
        </nav>
    </header>
    
    <main class="dashboard-container">
        <center><h1>Faculty Dashboard</h1></center>
        
        <div class="row text-center">
            <div class="col-md-4">
                <div class="card p-3">
                    <i class="fas fa-book card-icon"></i>
                    <h4>Courses Handled</h4>
                    <p><%= data.numcourses.count %> Active Courses</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3">
                    <i class="fas fa-users card-icon"></i>
                    <h4>Students Enrolled</h4>
                    <p><%= data.enroll.student_count %>+ Students</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3">
                    <i class="fas fa-trophy card-icon"></i>
                    <h4>Achievements</h4>
                    <p> <%= data.research_papers.research_papers_count %>  Research Papers Published</p>
                </div>
            </div>
        </div>

        <div class="table-container mt-4">
            <h3>Recent Activities</h3>
            <table class="table text-white">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Activity</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.activities.forEach(function(data) { %>
                        <tr>
                            <td><%= data.activity_date %></td>
                            <td><%= data.activity_title %></td>
                            <td><%= data.status %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </main>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
