<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Faculty Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(135deg, #1E2A78, #0F172A);
      color: white;
      font-family: 'Poppins', sans-serif;
      margin: 0;
    }
    .card {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      color: white;
      border: none;
    }
    .table-container {
      background: rgba(255, 255, 255, 0.1);
      border-radius: 10px;
      padding: 20px;
    }
  </style>
</head>
<body class="min-h-screen">

  <!-- NAVBAR -->
  <header class="mb-8">
    <nav class="bg-white/10 backdrop-blur-md p-4 rounded-lg shadow-lg">
      <div class="max-w-7xl mx-auto flex flex-wrap items-center justify-between">
        <a href="#" class="text-2xl font-bold text-cyan-300">Student Portal</a>
        <button class="md:hidden text-white focus:outline-none" onclick="document.getElementById('navLinks').classList.toggle('hidden')">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
        </button>
        <div class="w-full md:flex md:items-center md:w-auto hidden md:block" id="navLinks">
          <ul class="flex flex-col md:flex-row gap-4 mt-4 md:mt-0 md:space-x-6 text-white">
              <li class="nav-item"><a class="nav-link" href="/faculty_details">Dashboard</a></li>
              <li class="nav-item"><a class="nav-link" href="/faculty_details/finance_updates">Finance</a></li>
              <li class="nav-item"><a class="nav-link" href="/faculty_details/courses_handled">Courses</a></li>
              <li class="nav-item"><a class="nav-link" href="/faculty_details/faculty_achievements">Achievements</a></li>
              <li><a class="btn btn-danger" href="/logout">Logout</a></li>
        </ul>
        </div>
      </div>
    </nav>
  </header>



  <main>

    <!-- MAIN DASHBOARD -->
  <div class="dashboard-container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 space-y-8">

    <center><h1 class="text-3xl font-bold mb-6">üéì Faculty Achievements</h1></center>
    

    <!-- Grid layout -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

      <!-- Achievements -->
       
      <div class="card rounded-xl p-6 shadow-lg" style="height: 500px; overflow-y: scroll;">
        <h2 class="text-xl font-semibold mb-3">üèÜ Achievements</h2>
        <ol class="list-disc ml-5 text-sm space-y-1">
          <% result.achievements.forEach(function(data) { %>
            <li> 
              <div class="flex flex-col gap-3">
                <p>Title: <%= data.title %></p>
                <p>Year: <%= data.year %></p>
                <p>Description</p>
                <p> <%= data.description %></p>
              </div>
              
            </li>
            <% }); %>
          </ol>
      </div>

      <!-- Projects -->
      <div class="card rounded-xl p-6 shadow-lg" style="height: 500px; overflow-y: scroll;">
        <h2 class="text-xl font-semibold mb-3">üß™ Projects</h2>
        <ol class="list-disc ml-5 text-sm space-y-1">
          <% result.projects.forEach(function(data) { %>
            <li> 
              <div class="flex flex-col gap-3">
                <p>Title: <%= data.project_title %></p>
                <p>Description</p>
                <p> <%= data.description %></p>
              </div>
              
            </li>
            <% }); %>
        </ol>
      </div>

      <!-- Degree -->
      <div class="card rounded-xl p-6 shadow-lg" style="height: 500px; overflow-y: scroll;">
        <h2 class="text-xl font-semibold mb-3">üéì Degree</h2>
        <ol class="list-disc ml-5 text-sm space-y-1">
          <% result.degree.forEach(function(data) { %>
            <li> 
              <div class="flex flex-col gap-3">
                <p>Degree: <%= data.degree_name %></p>
                <p>Major: <%= data.major %></p>
                <p>University: <%= data.university %></p>
                <p>Year of Completion: <%= data.year_completed %></p>
              </div>
              
            </li>
            <% }); %>
        </ol>
      </div>

      <!-- Co-Curricular Activities -->
      <div class="card rounded-xl p-6 shadow-lg" style="height: 500px; overflow-y: scroll;">
        <h2 class="text-xl font-semibold mb-3">ü§ù Co-Curricular Activities</h2>
        <ol class="list-disc ml-5 text-sm space-y-1">
          <% result.activities.forEach(function(data) { %>
            <li> 
              <div class="flex flex-col gap-3">
                <p>Event: <%= data.event_or_org %></p>
                <p>Role: <%= data.role %></p>
                <p>Year: <%= data.year %></p>
              </div>
              
            </li>
            <% }); %>
        </ol>
      </div>

      <!-- Skills -->
      <div class="card rounded-xl p-6 shadow-lg" style="height: 500px; overflow-y: scroll;">
        <h2 class="text-xl font-semibold mb-3">üí° Skills</h2>
        <ol class="list-disc ml-5 text-sm space-y-1">
          <% result.skills.forEach(function(data) { %>
            <li> 
              <div class="flex flex-col gap-3">
                <p>Name: <%= data.skill_name %></p>
                <p>Category: <%= data.skill_category %></p>
              </div>
              
            </li>
            <% }); %>
        </ol>
      </div>

      <!-- Certifications -->
      <div class="card rounded-xl p-6 shadow-lg" style="height: 500px; overflow-y: scroll;">
        <h2 class="text-xl font-semibold mb-3">üìú Certifications</h2>
        <ol class="list-disc ml-5 text-sm space-y-1">
          <% result.certifications.forEach(function(data) { %>
            <li> 
              <div class="flex flex-col gap-3">
                <p>Name: <%= data.certificate_name %></p>
                <p>Provider: <%= data.provider %></p>
                <p>Year: <%= data.year_awarded %></p>
              </div>
              
            </li>
            <% }); %>
        </ol>
      </div>

      <!-- Education Table -->
      

    </div>
  </div>

  </main>

  

</body>
</html>
